<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:ellipsize="end"
            android:paddingTop="5dp"
            android:text="你没有看错!8天长假赴韩中国团体游客数量为0你没有看错!8天长假赴韩中国团体游客数量为0"
            android:textColor="@color/NewsListTitle"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            >
            <TextView
                android:id="@+id/publishTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/NewsListFootnote"
                android:text="1小时前" />

            <TextView
                android:id="@+id/publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/NewsListFootnote"
                android:text="新闻集锦" />
            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_marginLeft="40dp"
                />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <com.java.xtxnews.NetImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/simple_photo"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>
</LinearLayout>